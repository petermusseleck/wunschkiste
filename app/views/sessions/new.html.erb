<h2>Anmelden</h2>
<%= form_tag sessions_path do %>
  <p>
    <%= label_tag :email %>
    <%= text_field_tag :email, params[:email] %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>
  
  <p><%= submit_tag "Log in" %></p> <br />
  <p><%= link_to "Passwort vergessen?", new_password_reset_path %></p>
<% end %>